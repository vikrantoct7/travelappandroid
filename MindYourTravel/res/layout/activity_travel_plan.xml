<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TravelPlanActivity" >

    <TextView
	    android:id="@+id/lblTravelErrorMsg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_alignRight="@+id/tblTravelPlan"
	    android:text="@string/lblError"
	    android:textColor="#FF0000"
	    android:visibility="visible" />
    
    <TableLayout
        android:id="@+id/tblTravelPlan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTravelErrorMsg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >
        <TableRow
            android:id="@+id/tableRow1"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

             <TextView
                 android:id="@+id/lblCurrentLoc"
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight=".25"
                 android:paddingTop="10dp"
                 android:text="@string/lblCurrentLoc"
                 android:textColor="#000000" />
           
            <!--   <TextView
                 android:id="@+id/txtCurrentLoc"
                 android:layout_width="0dp"
                 android:layout_height="fill_parent"
                 android:layout_weight=".50"
                 android:text="@string/lblCurLocNotfound"
                 android:textSize="12sp" />
             -->

              <Spinner
                  android:id="@+id/ddCurrentLoc"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight=".45"
                  android:prompt="@string/ddSelLocation" />

              <Button
                  android:id="@+id/btnPlusCurLoc"
                  android:layout_width="25dp"
                  android:layout_height="28dp"
                  android:background="@drawable/plus_icon" />

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow2"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
             
            <TextView
                android:id="@+id/lblStartLoc"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:paddingTop="10dp"
                android:text="@string/lblStartLoc"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/txtStartLoc"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:ems="10"
                android:inputType="text"
                android:textSize="16sp" >

				    <requestFocus />
			</EditText>       
         </TableRow>
         
        <TableRow
             android:id="@+id/tableRow3"
             android:paddingBottom="5dp"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lblEndLoc"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:paddingTop="10dp"
                android:text="@string/lblEndLoc"
                android:textColor="#000000" />

			<!--  
			<EditText
			    android:id="@+id/txtEndLoc"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
			    android:ems="10"
			    android:inputType="text"
			    android:textSize="12sp" />
			 -->

			 <Spinner
			     android:id="@+id/ddEndLocation"
			     android:layout_width="0dp"
			     android:layout_height="wrap_content"
			     android:layout_weight=".45"
			     android:prompt="@string/ddSelLocation" />

			<Button
			    android:id="@+id/btnPlusEndLoc"
			    android:layout_width="25dp"
			    android:layout_height="28dp"
			    android:background="@drawable/plus_icon" />

         </TableRow>
         <TableRow
             android:id="@+id/tableRow4"
             android:paddingBottom="5dp"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content">

			<TextView
			    android:id="@+id/lblTravelMode"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight=".25"
			    android:paddingTop="10dp"
			    android:text="@string/lblTravelMode"
			    android:textColor="#000000" />

			<Spinner
			    android:id="@+id/ddTravelType"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight=".52"
			    android:prompt="@string/ddTravelType" />

         </TableRow>
        <TableRow
             android:id="@+id/tableRow5"
             android:paddingBottom="5dp"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >
			
            <TextView
                android:id="@+id/lblTravelTime"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:paddingTop="10dp"
                android:text="@string/lblTravelTime"
                android:textColor="#000000" />
			<!-- 
            <EditText
                android:id="@+id/txtStartTime"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight=".55"
                android:ems="10"
                android:inputType="text"
                android:textSize="16sp" />
                -->

                <Spinner
                    android:id="@+id/ddStartTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".52"
                    android:prompt="@string/ddTravelType" />
			
         </TableRow>

         
         <TableRow
             android:id="@+id/tableRow6"
             android:paddingBottom="5dp"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/lblNoOfPassenger"
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight=".25"
			    android:paddingTop="10dp"
			    android:text="@string/lblNoOfPassenger"
			    android:textColor="#000000" />
				
			<EditText
			    android:id="@+id/txtNoOfPass"
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:layout_weight=".50"
			    android:ems="10"
			    android:inputType="number"
			    android:textSize="16sp" />

         </TableRow>
         <TableRow
	            android:id="@+id/tableRow7"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content" >
				<TextView
				    android:id="@+id/dumy1"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:paddingTop="10dp"
				    android:layout_weight=".5" />
				
				<Button
	    			android:id="@+id/btnTravelSubmit"
					android:layout_width="wrap_content"
        		    android:layout_height="fill_parent"
        		    android:layout_weight=".5"
	    			android:text="@string/btnTravelSubmit" />
				
				<TextView
				    android:id="@+id/dumy2"
				    android:layout_width="0dp"
				    android:layout_height="fill_parent"
				    android:layout_weight=".5" />
        	</TableRow>
    </TableLayout>
  
</RelativeLayout>
