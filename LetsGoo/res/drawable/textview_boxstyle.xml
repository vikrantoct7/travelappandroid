<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:shape="rectangle" >

    <solid android:color="#000000" />

    <corners android:radius="10dp" />

    <gradient
        android:angle="270"
        android:centerColor="#B1B0B0"
        android:endColor="#B1B0B0"
        android:startColor="#B1B0B0"
        android:type="linear" />

    <padding
        android:bottom="0dp"
        android:left="10dp"
        android:right="10dp"
        android:top="0dp" />

    <stroke
        android:width="2dp"
        android:color="#000000" />

</shape>